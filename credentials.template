# AWS Credentials Template
# Copy this file to credentials.env and fill in your actual values

# AWS Account Information
export AWS_ACCOUNT_ID="YOUR_AWS_ACCOUNT_ID"
export AWS_REGION="ca-central-1"
export AWS_PROFILE="default"  # or your specific profile name

# SSH Configuration
export SSH_KEY_NAME="your-ssh-key-name"
export SSH_KEY_FILE="your-ssh-key.pem"

# Network Configuration
export ALLOWED_IP="YOUR_PUBLIC_IP/32"  # Your current public IP
export OLLAMA_PORT="11434"

# Instance Configuration
export INSTANCE_TYPE="t2.xlarge"
export VOLUME_SIZE="100"
export AMI_ID="ami-0dd67d541aa70c8b9"  # Ubuntu 24.04 LTS

# Model Configuration
export AI_MODEL="gemma2:9b"
export MODEL_SIZE="5.4GB"

# Usage Instructions:
# 1. Copy this file: cp credentials.template credentials.env
# 2. Edit credentials.env with your actual values
# 3. Source the file: source credentials.env
# 4. Run terraform commands
